<%= render 'dashboard/header' %>

<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Model</th>
      <th>Manufacturer</th>
      <th>Style</th>
      <th>Rent</th>
      <th>Location</th>
      <th>Licence plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.status %></td>
        <td><%= car.model %></td>
        <td><%= car.manufacturer %></td>
        <td><%= car.style %></td>
        <td><%= car.rent %></td>
        <td><%= car.location %></td>
        <td><%= car.licence_plate %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to "Reserve", controller: "reservations", action: "new", car_id: car.id%></td>
        <% if is_admin_or_superadmin %>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
      <tr>
        </br></br></br>
        <table border="1" cellpadding="0">
          <tbody >
          <% 7.times do |i|%>
              <tr height="20">
                <% 24.times do |j|%>
                    <% if @cararray[car.id][24*i + j] == 0%>
                      <td onclick=showAlert(this) name="cell" width="40" data-shot_available="true" data-car_id=<%= car.id %> data-cell_number=<%= 24*i + j%> data-beg_time=<%= @current_bigining_time%>> </td>
                    <% end %>
                    <% if @cararray[car.id][24*i + j] == 1%>
                        <td width="40" bgcolor="#483d8b" data-slow_available="false"></td>
                    <% end %>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </tr>
      <tr>
      </tr>
      </br></br></br></br>
      <!--<tr>-->
        <!--<td colspan="7"><%= @cararray %></td>-->
      <!--</tr>-->
    <% end %>
  </tbody>
</table>

<script>

  function showAlert(cell){
      cell.setAttribute("bgcolor","#ffaa00")
  }

</script>

<br>
<% if is_admin_or_superadmin%>
<%= link_to 'New Car', new_car_path %>
<%end %>



