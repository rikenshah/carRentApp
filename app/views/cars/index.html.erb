<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Model</th>
      <th>Manufacturer</th>
      <th>Style</th>
      <th>Rent</th>
      <th>Location</th>
      <th>Licence plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.status %></td>
        <td><%= car.model %></td>
        <td><%= car.manufacturer %></td>
        <td><%= car.style %></td>
        <td><%= car.rent %></td>
        <td><%= car.location %></td>
        <td><%= car.licence_plate %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <table border="1" cellpadding="0">
          <tbody >
          <%= 7.times do %>
              <tr height="20">
                <%= 24.times do %>
                    <td width="40"></td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </tr>
      <tr>
        <td colspan="7"><%= @carres%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
